# Bank Sample Application Environment Variables

# Application
APP_HOST=0.0.0.0
APP_PORT=8081
RUST_LOG=info,bank=debug

# PostgreSQL (Event Store)
DATABASE_URL=postgres://bank:bank_password@localhost:5432/bank_events

# Redis (Read Model Cache)
REDIS_URL=redis://localhost:6380

# AWS/LocalStack (SQS)
SQS_ENDPOINT=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# SQS Queue Names
SQS_EVENTS_QUEUE_URL=http://localhost:4566/000000000000/bank-events
SQS_PROJECTIONS_QUEUE_URL=http://localhost:4566/000000000000/bank-projections

# Snapshot Configuration
SNAPSHOT_THRESHOLD=100
