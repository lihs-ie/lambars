# =============================================================================
# API Benchmark Environment Configuration
# =============================================================================
#
# Copy this file to .env and customize as needed:
#   cp .env.sample .env
#
# Environment variables can be overridden by:
#   1. CLI options (highest priority)
#   2. Shell environment variables
#   3. .env file (lowest priority)

# =============================================================================
# Storage/Cache Configuration
# =============================================================================

# Storage backend: in_memory | postgres
STORAGE_MODE=in_memory

# Cache backend: in_memory | redis | none
CACHE_MODE=redis

# Cache strategy: read-through | write-through | write-behind
CACHE_STRATEGY=read-through

# =============================================================================
# Performance Tuning
# =============================================================================

# Cache hit rate percentage (0-100)
HIT_RATE=50

# Failure injection rate (0.0-1.0)
# 0 = no failures, 0.1 = 10% failure rate
FAIL_RATE=0

# =============================================================================
# Concurrency Settings
# =============================================================================

# Number of worker threads
WORKERS=4

# Database connection pool size
DATABASE_POOL_SIZE=16

# Redis connection pool size
REDIS_POOL_SIZE=8

# =============================================================================
# Data Configuration
# =============================================================================

# Data scale: small | medium | large
#   small:  100 tasks, 10 projects
#   medium: 10,000 tasks, 100 projects
#   large:  1,000,000 tasks, 1,000 projects
DATA_SCALE=medium

# Payload variant: minimal | standard | complex | heavy
PAYLOAD_VARIANT=standard

# Random seed for reproducible data generation (leave empty for random)
SEED=

# =============================================================================
# API Configuration
# =============================================================================

# API server URL
API_URL=http://localhost:3002

# =============================================================================
# Profiling (optional)
# =============================================================================

# Enable profiling: true | false
PROFILE=false
